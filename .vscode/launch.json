{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "leaninit.cli",
            "args": ["${workspaceFolder}/examples/basic/build/build-nucleo-u5a5zj-q.cmake/leaninit-stm32.elf","arm-none-eabi-","--out=${workspaceFolder}/examples/basic/build/build-nucleo-u5a5zj-q.cmake/leaninit-stm32.elf.final.elf"]
        },
        {
            "name": "Debug NUCLEO-U5A5ZJ-Q",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable":  "${workspaceFolder}/examples/basic/build/build-nucleo-u5a5zj-q.cmake/leaninit-stm32.elf.final.elf",
            // Let CMake extension decide executable: "${command:cmake.launchTargetPath}" //need the CMAKE extension
            // Or fixed file path: "${workspaceFolder}/path/to/filename.elf"
            "request": "launch",
            "servertype": "stlink",
            "device": "STM32U5A5ZJTxQ", //MCU used
            "interface": "swd",
            "serialNumber": "",        //Set ST-Link ID if you use multiple at the same time
            "runToEntryPoint": "Reset_Handler",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32U5A5.svd",
            "v1": false,               //Change it depending on ST Link version
            "serverpath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer":"${config:STM32VSCodeExtension.cubeCLT.path}/STM32CubeProgrammer/bin",
            "stlinkPath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",   
            "armToolchainPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin",
            "gdbPath":"${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",            
            "serverArgs": ["-m","0"]
            //,"preLaunchTask": "Build project"
            /* If you use external loader, add additional arguments */
            //"serverArgs": ["--extload", "path/to/ext/loader.stldr"],
        }
    ]
}